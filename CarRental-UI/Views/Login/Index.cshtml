<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Custom fonts for this template-->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <style>
        body {
            background: linear-gradient(to right, #4e73df, #224abe);
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            border: 2px solid #d1d3e2;
            border-radius: 25px;
            background-color: #f8f9fc;
            padding: 0.75rem 1.25rem;
            font-size: 1rem;
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
            border-radius: 25px;
            padding: 0.75rem 1.25rem;
            font-size: 1rem;
            transition: all 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #224abe;
                border-color: #224abe;
            }

        .h4 {
            font-size: 1.5rem;
            font-weight: bold;
            color: #4e73df;
        }

        .small {
            color: #4e73df;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 mb-4">Login</h1>
                            </div>
                            <form class="user">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-user" id="username" placeholder="Kullanıcı Adınızı Giriniz">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-user" id="password" placeholder="Parolanızı Giriniz">
                                </div>
                                <button id="login" class="btn btn-primary btn-user btn-block">Login</button>
                                <hr>
                            </form>
                            <div id="divResult"></div>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="~/Login/Register?">Kayıt Olun!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script>
        $(document).ready(function () {
            var baseurl = "https://localhost:7110/";
            $("#login").click(function (e) {
                e.preventDefault();
                var dto = {
                    UserName: $("#username").val(),
                    Password: $("#password").val(),
                };

                $.ajax({
                    type: "POST",
                    url: baseurl + "api/User/SignIn",
                    contentType: "application/json",
                    data: JSON.stringify(dto),
                    success: function (response) {
                        if (response.status === true) {
                            $("#divResult")
                                .show()
                                .removeClass()
                                .addClass("alert alert-success")
                                .html("Giriş Başarılı Admin Paneline Yönlendiriliyorsunuz")
                                .fadeOut(5000);
                            localStorage.setItem("token", response.message);
                            setTimeout(function () {
                                window.location.href = "/admin";
                            }, 2000);
                        } else {
                            $("#divResult")
                                .show()
                                .removeClass()
                                .addClass("alert alert-danger")
                                .html(response.message)
                                .fadeOut(100000);
                        }
                    },
                    error: function (xhr, status, error) {
                        var errorMessages = xhr.responseText;
                        $("#divResult")
                            .show()
                            .removeClass()
                            .addClass("alert alert-danger")
                            .html("Hata: " + errorMessages)
                            .fadeOut(10000);
                    }
                });
            });
        });
    </script>
</body>

</html>
